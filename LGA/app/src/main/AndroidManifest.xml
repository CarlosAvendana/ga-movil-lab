<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ga.cf.lga">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--### Login ###-->
        <activity
            android:name=".Activity.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--### Principal ###-->
        <activity
            android:name=".Activity.NavDraw.NavDrawerActivity"
            android:label="@string/title_activity_nav_draw"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--### Carrera ###-->
        <activity
            android:name=".Activity.Carrera.AdmCarreraActivity"
            android:label="@string/title_activity_amd_carrera"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Carrera.AddUpdCarreraActivity"
            android:label="@string/title_activity_add_upd_carrera"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--### Curso ###-->
        <activity
            android:name=".Activity.Curso.AdmCursoActivity"
            android:label="@string/title_activity_amd_curso"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.Curso.AddUpdCursoActivity"
            android:label="@string/title_activity_add_upd_curso"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>